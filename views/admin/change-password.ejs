<h2 class="mb-4"><%= title %></h2>

<div class="card shadow-sm">
    <div class="card-body">
        <p class="card-text text-muted">For security, please provide your current password to set a new one.</p>
        <hr>
        <form action="/admin/change-password" method="POST" novalidate>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">

            <div class="mb-3">
                <label for="currentPassword" class="form-label">Current Password</label>
                <input type="password" class="form-control <%= errors.currentPassword ? 'is-invalid' : '' %>" id="currentPassword" name="currentPassword" required>
                <% if (errors.currentPassword) { %>
                    <div class="invalid-feedback"><%= errors.currentPassword %></div>
                <% } %>
            </div>

            <div class="mb-3">
                <label for="newPassword" class="form-label">New Password</label>
                <input type="password" class="form-control <%= errors.newPassword ? 'is-invalid' : '' %>" id="newPassword" name="newPassword" required>
                <% if (errors.newPassword) { %>
                    <div class="invalid-feedback"><%= errors.newPassword %></div>
                <% } %>
            </div>

            <div class="mb-3">
                <label for="confirmPassword" class="form-label">Confirm New Password</label>
                <input type="password" class="form-control <%= errors.confirmPassword ? 'is-invalid' : '' %>" id="confirmPassword" name="confirmPassword" required>
                <% if (errors.confirmPassword) { %>
                    <div class="invalid-feedback"><%= errors.confirmPassword %></div>
                <% } %>
            </div>

            <button type="submit" class="btn btn-primary">Change Password</button>
        </form>
    </div>
</div>