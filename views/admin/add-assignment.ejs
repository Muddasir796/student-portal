<h2 class="mb-4"><%= title %></h2>

<form action="/admin/assignments/add" method="POST" enctype="multipart/form-data" novalidate>
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">

    <div class="row">
        <div class="col-md-6 mb-3">
            <label for="title_en" class="form-label">Title (English)</label>
            <input type="text" class="form-control <%= errors.title_en ? 'is-invalid' : '' %>" id="title_en" name="title_en" value="<%= oldInput.title_en || '' %>" required>
            <% if (errors.title_en) { %>
                <div class="invalid-feedback"><%= errors.title_en %></div>
            <% } %>
        </div>

        <div class="col-md-6 mb-3">
            <label for="title_ur" class="form-label">Title (Urdu)</label>
            <input type="text" class="form-control <%= errors.title_ur ? 'is-invalid' : '' %>" id="title_ur" name="title_ur" value="<%= oldInput.title_ur || '' %>" required dir="rtl">
            <% if (errors.title_ur) { %>
                <div class="invalid-feedback"><%= errors.title_ur %></div>
            <% } %>
        </div>

        <div class="col-md-6 mb-3">
            <label for="subject" class="form-label">Subject (e.g., Computer Science, History)</label>
            <input type="text" class="form-control <%= errors.subject ? 'is-invalid' : '' %>" id="subject" name="subject" value="<%= oldInput.subject || '' %>" required>
            <% if (errors.subject) { %>
                <div class="invalid-feedback"><%= errors.subject %></div>
            <% } %>
        </div>

        <div class="col-md-6 mb-3">
            <label for="deadline" class="form-label">Deadline</label>
            <input type="date" class="form-control <%= errors.deadline ? 'is-invalid' : '' %>" id="deadline" name="deadline" value="<%= oldInput.deadline || '' %>" required>
            <% if (errors.deadline) { %>
                <div class="invalid-feedback"><%= errors.deadline %></div>
            <% } %>
        </div>

        <div class="col-md-6 mb-3">
            <label for="description_en" class="form-label">Description (English)</label>
            <textarea class="form-control <%= errors.description_en ? 'is-invalid' : '' %>" id="description_en" name="description_en" rows="4" required><%= oldInput.description_en || '' %></textarea>
            <% if (errors.description_en) { %>
                <div class="invalid-feedback"><%= errors.description_en %></div>
            <% } %>
        </div>

        <div class="col-md-6 mb-3">
            <label for="description_ur" class="form-label">Description (Urdu)</label>
            <textarea class="form-control <%= errors.description_ur ? 'is-invalid' : '' %>" id="description_ur" name="description_ur" rows="4" required dir="rtl"><%= oldInput.description_ur || '' %></textarea>
            <% if (errors.description_ur) { %>
                <div class="invalid-feedback"><%= errors.description_ur %></div>
            <% } %>
        </div>

        <div class="col-md-12 mb-3">
            <label for="file" class="form-label">Attachment File (Optional)</label>
            <input class="form-control" type="file" id="file" name="file">
            <div class="form-text">You can attach a PDF, Word document, or image file.</div>
             <% if (errors.file) { %>
                <div class="invalid-feedback"><%= errors.file %></div>
            <% } %>
        </div>
    </div>

    <button type="submit" class="btn btn-success px-4">Add Assignment</button>
    <a href="/admin/assignments" class="btn btn-secondary">Cancel</a>
</form>