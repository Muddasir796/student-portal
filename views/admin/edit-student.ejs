<%# views/admin/edit-student.ejs %>

<div class="page-header">
    <h2 class="page-title"><%= pageTitle %></h2>
</div>

<% if (locals.error) { %>
    <div class="error-message" style="background-color: #fee2e2; color: #991b1b; padding: 1rem; border-radius: 0.5rem; margin-bottom: 1rem;">
        <%= error %>
    </div>
<% } %>

<div class="card">
    <%# Form ka action URL student ki ID ke sath hoga %>
    <form action="/admin/students/edit/<%= student._id %>" method="POST">
        <div class="form-group" style="margin-bottom: 1rem;">
            <label for="name" style="display: block; margin-bottom: 0.5rem;">Student Name</label>
            <input type="text" name="name" id="name" class="form-input" value="<%= student.name %>" required>
        </div>
        <div class="form-group" style="margin-bottom: 1rem;">
            <label for="semester" style="display: block; margin-bottom: 0.5rem;">Semester</label>
            <input type="number" name="semester" id="semester" class="form-input" min="1" max="8" value="<%= student.semester %>" required>
        </div>
        <div class="form-group" style="margin-bottom: 1rem;">
            <label for="birthday" style="display: block; margin-bottom: 0.5rem;">Birthday</label>
            <%# Date ko YYYY-MM-DD format mein convert karna zaroori hai input ke liye %>
            <input type="date" name="birthday" id="birthday" class="form-input" value="<%= student.birthday.toISOString().split('T')[0] %>" required>
        </div>
        <div class="form-group" style="margin-bottom: 1.5rem;">
            <label for="photo" style="display: block; margin-bottom: 0.5rem;">Photo URL (Optional)</label>
            <input type="text" name="photo" id="photo" class="form-input" value="<%= student.photo %>">
        </div>

        <button type="submit" class="btn btn-primary">Update Student</button>
        <a href="/admin/students" class="btn" style="background-color: #e5e7eb;">Cancel</a>
    </form>
</div>
