<%# Yeh file views/admin/manage-teachers.ejs hai %>

<div class="bg-white p-6 rounded-lg shadow-md">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-semibold text-gray-800">Manage Teachers</h1>
        <a href="/admin/teachers/add" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-lg flex items-center">
            <i class="fas fa-plus mr-2"></i> Add New Teacher
        </a>
    </div>

    <!-- Teachers Table -->
    <div class="overflow-x-auto">
        <table class="min-w-full bg-white">
            <thead class="bg-gray-200">
                <tr>
                    <th class="text-left py-3 px-4 uppercase font-semibold text-sm">#</th>
                    <th class="text-left py-3 px-4 uppercase font-semibold text-sm">Name</th>
                    <th class="text-left py-3 px-4 uppercase font-semibold text-sm">Email</th>
                    <th class="text-left py-3 px-4 uppercase font-semibold text-sm">Subject</th>
                    <th class="text-left py-3 px-4 uppercase font-semibold text-sm">Actions</th>
                </tr>
            </thead>
            <tbody class="text-gray-700">
                
                <%# Yahan hum database se anay wale teachers ko loop karein gey %>
                <%# Example ke liye, hum kuch dummy data dikha rahe hain %>

                <% if (typeof teachers !== 'undefined' && teachers.length > 0) { %>
                    <% teachers.forEach((teacher, index) => { %>
                        <tr class="border-b border-gray-200 hover:bg-gray-100">
                            <td class="py-3 px-4"><%= index + 1 %></td>
                            <td class="py-3 px-4"><%= teacher.name %></td>
                            <td class="py-3 px-4"><%= teacher.email %></td>
                            <td class="py-3 px-4"><%= teacher.subject %></td>
                            <td class="py-3 px-4">
                                <a href="/admin/teachers/edit/<%= teacher._id %>" class="text-blue-500 hover:text-blue-700 mr-4">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                                <a href="/admin/teachers/delete/<%= teacher._id %>" class="text-red-500 hover:text-red-700" onclick="return confirm('Are you sure you want to delete this teacher?');">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="5" class="text-center py-4">No teachers found.</td>
                    </tr>
                <% } %>
                
                <!-- Dummy Data Example -->
                <tr class="border-b border-gray-200 hover:bg-gray-100">
                    <td class="py-3 px-4">1</td>
                    <td class="py-3 px-4">Dr. Ahmed Ali</td>
                    <td class="py-3 px-4">ahmed.ali@example.com</td>
                    <td class="py-3 px-4">Computer Science</td>
                    <td class="py-3 px-4">
                        <a href="#" class="text-blue-500 hover:text-blue-700 mr-4"><i class="fas fa-pencil-alt"></i></a>
                        <a href="#" class="text-red-500 hover:text-red-700"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
                 <tr class="border-b border-gray-200 hover:bg-gray-100">
                    <td class="py-3 px-4">2</td>
                    <td class="py-3 px-4">Ms. Fatima Khan</td>
                    <td class="py-3 px-4">fatima.khan@example.com</td>
                    <td class="py-3 px-4">Mathematics</td>
                    <td class="py-3 px-4">
                        <a href="#" class="text-blue-500 hover:text-blue-700 mr-4"><i class="fas fa-pencil-alt"></i></a>
                        <a href="#" class="text-red-500 hover:text-red-700"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>

            </tbody>
        </table>
    </div>
</div>
