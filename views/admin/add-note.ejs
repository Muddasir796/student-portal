<%# views/admin/add-note.ejs %>

<div class="page-header">
    <h2 class="page-title"><%= pageTitle %></h2>
</div>

<% if (locals.error) { %>
    <div class="error-message" style="background-color: #fee2e2; color: #991b1b; padding: 1rem; border-radius: 0.5rem; margin-bottom: 1rem;">
        <%= error %>
    </div>
<% } %>

<div class="card">
    <form action="/admin/notes/add" method="POST">
        <fieldset style="border: 1px solid #ccc; padding: 1.5rem; margin-bottom: 1.5rem; border-radius: 0.5rem;">
            <legend style="padding: 0 0.5rem; font-weight: 600;">Subject Information</legend>
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1.5rem;">
                <div class="form-group">
                    <label for="subject_en" style="display: block; margin-bottom: 0.5rem;">Subject Name (English)</label>
                    <input type="text" name="subject_en" id="subject_en" class="form-input" required>
                </div>
                <div class="form-group">
                    <label for="subject_ur" style="display: block; margin-bottom: 0.5rem;">Subject Name (Urdu)</label>
                    <input type="text" name="subject_ur" id="subject_ur" class="form-input" dir="rtl" required>
                </div>
                <div class="form-group" style="grid-column: 1 / -1;">
                    <label for="slug" style="display: block; margin-bottom: 0.5rem;">Subject Slug (URL-friendly name)</label>
                    <input type="text" name="slug" id="slug" class="form-input" placeholder="e.g., quranic-studies" required>
                </div>
            </div>
        </fieldset>

        <fieldset style="border: 1px solid #ccc; padding: 1.5rem; border-radius: 0.5rem;">
            <legend style="padding: 0 0.5rem; font-weight: 600;">First Note Details</legend>
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1.5rem;">
                 <div class="form-group">
                    <label for="note_title_en" style="display: block; margin-bottom: 0.5rem;">Note Title (English)</label>
                    <input type="text" name="note_title_en" id="note_title_en" class="form-input" required>
                </div>
                <div class="form-group">
                    <label for="note_title_ur" style="display: block; margin-bottom: 0.5rem;">Note Title (Urdu)</label>
                    <input type="text" name="note_title_ur" id="note_title_ur" class="form-input" dir="rtl" required>
                </div>
                <div class="form-group">
                    <label for="note_url" style="display: block; margin-bottom: 0.5rem;">Download URL</label>
                    <input type="text" name="note_url" id="note_url" class="form-input" required>
                </div>
                 <div class="form-group">
                    <label for="note_date" style="display: block; margin-bottom: 0.5rem;">Upload Date</label>
                    <input type="date" name="note_date" id="note_date" class="form-input" required>
                </div>
            </div>
        </fieldset>
        
        <div style="margin-top: 2rem;">
            <button type="submit" class="btn btn-primary">Add Subject with Note</button>
            <a href="/admin/notes" class="btn" style="background-color: #e5e7eb;">Cancel</a>
        </div>
    </form>
</div>
