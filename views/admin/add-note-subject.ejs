<h2 class="mb-4"><%= title %></h2>

<form action="/admin/notes/add-subject" method="POST" novalidate>
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">

    <div class="row">
        <div class="col-md-6 mb-3">
            <label for="subject_en" class="form-label">Subject Name (English)</label>
            <input type="text" class="form-control <%= errors.subject_en ? 'is-invalid' : '' %>" id="subject_en" name="subject_en" value="<%= oldInput.subject_en || '' %>" required>
            <% if (errors.subject_en) { %>
                <div class="invalid-feedback"><%= errors.subject_en %></div>
            <% } %>
        </div>

        <div class="col-md-6 mb-3">
            <label for="subject_ur" class="form-label">Subject Name (Urdu)</label>
            <input type="text" class="form-control <%= errors.subject_ur ? 'is-invalid' : '' %>" id="subject_ur" name="subject_ur" value="<%= oldInput.subject_ur || '' %>" required dir="rtl">
            <% if (errors.subject_ur) { %>
                <div class="invalid-feedback"><%= errors.subject_ur %></div>
            <% } %>
        </div>

        <div class="col-md-12 mb-3">
            <label for="slug" class="form-label">URL Slug</label>
            <input type="text" class="form-control <%= errors.slug ? 'is-invalid' : '' %>" id="slug" name="slug" value="<%= oldInput.slug || '' %>" required>
            <div class="form-text">
                A unique, URL-friendly identifier. Use lowercase letters, numbers, and hyphens only (e.g., computer-science, islamic-studies-101).
            </div>
            <% if (errors.slug) { %>
                <div class="invalid-feedback"><%= errors.slug %></div>
            <% } %>
        </div>
    </div>

    <div class="alert alert-info">
        <strong>Note:</strong> You will add the actual notes (PDF links) after creating the subject.
    </div>

    <button type="submit" class="btn btn-success px-4 mt-3">Create Subject</button>
    <a href="/admin/notes" class="btn btn-secondary mt-3">Cancel</a>
</form>