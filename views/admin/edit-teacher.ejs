<h2 class="mb-4"><%= title %></h2>

<form action="/admin/teachers/edit/<%= teacher._id %>" method="POST" enctype="multipart/form-data" novalidate>
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">

    <div class="row">
        <div class="col-md-6 mb-3">
            <label for="name" class="form-label">Teacher Name</label>
            <input type="text" class="form-control <%= errors.name ? 'is-invalid' : '' %>" id="name" name="name" value="<%= oldInput.name || teacher.name %>" required>
            <% if (errors.name) { %>
                <div class="invalid-feedback"><%= errors.name %></div>
            <% } %>
        </div>

        <div class="col-md-6 mb-3">
            <label for="designation" class="form-label">Designation (e.g., Professor, Lecturer)</label>
            <input type="text" class="form-control <%= errors.designation ? 'is-invalid' : '' %>" id="designation" name="designation" value="<%= oldInput.designation || teacher.designation %>" required>
            <% if (errors.designation) { %>
                <div class="invalid-feedback"><%= errors.designation %></div>
            <% } %>
        </div>

        <div class="col-md-6 mb-3">
            <label for="subject" class="form-label">Subject</label>
            <input type="text" class="form-control <%= errors.subject ? 'is-invalid' : '' %>" id="subject" name="subject" value="<%= oldInput.subject || teacher.subject %>" required>
            <% if (errors.subject) { %>
                <div class="invalid-feedback"><%= errors.subject %></div>
            <% } %>
        </div>

        <div class="col-md-6 mb-3">
            <label for="contact" class="form-label">Contact Number (Optional)</label>
            <input type="text" class="form-control <%= errors.contact ? 'is-invalid' : '' %>" id="contact" name="contact" value="<%= oldInput.contact || teacher.contact %>">
            <% if (errors.contact) { %>
                <div class="invalid-feedback"><%= errors.contact %></div>
            <% } %>
        </div>

        <div class="col-md-12 mb-3">
            <label for="profileImage" class="form-label">New Profile Picture (Optional)</label>
            <div class="d-flex align-items-center">
                <img src="<%= teacher.profileImage %>" alt="<%= teacher.name %>" class="rounded-circle me-3" width="60" height="60" style="object-fit: cover;">
                <input 
                    class="form-control <%= errors.profileImage ? 'is-invalid' : '' %>" 
                    type="file" 
                    id="profileImage" 
                    name="profileImage">
            </div>
            <div class="form-text">Leave this empty if you do not want to change the picture.</div>
            <% if (errors.profileImage) { %>
                <div class="invalid-feedback"><%= errors.profileImage %></div>
            <% } %>
        </div>
    </div>

    <button type="submit" class="btn btn-success px-4">Update Teacher</button>
    <a href="/admin/teachers" class="btn btn-secondary">Cancel</a>
</form>