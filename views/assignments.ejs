<div class="container my-5">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold">Current Assignments</h1>
        <p class="lead text-muted">Stay up-to-date with all your coursework and deadlines.</p>
    </div>

    <div class="row">
        <% if(assignments.length > 0) { %>
            <% assignments.forEach(assignment => { %>
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <h5 class="card-title mb-0" dir="<%= lang === 'ur' ? 'rtl' : 'ltr' %>">
                                <%= assignment.title[lang] || assignment.title.en %>
                            </h5>
                        </div>
                        <div class="card-body">
                            <h6 class="card-subtitle mb-2 text-muted">
                                <strong>Subject:</strong> <%= assignment.subject %>
                            </h6>
                            <p class="card-text" dir="<%= lang === 'ur' ? 'rtl' : 'ltr' %>">
                                <%= assignment.description[lang] || assignment.description.en %>
                            </p>
                        </div>
                        <div class="card-footer bg-light">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>Deadline:</strong> 
                                    <span class="text-danger fw-bold"><%= new Date(assignment.deadline).toLocaleDateString('en-GB', { day: '2-digit', month: 'short', year: 'numeric' }) %></span>
                                </div>
                                <% if (assignment.file) { %>
                                    <a href="<%= assignment.file %>" target="_blank" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-download me-1"></i> Download File
                                    </a>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="col-12">
                <div class="alert alert-info text-center">
                    <p class="mb-0">There are no active assignments at the moment. Well done!</p>
                </div>
            </div>
        <% } %>
    </div>
</div>