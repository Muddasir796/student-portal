<div class="container my-5">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold">Downloads</h1>
        <p class="lead text-muted">Find important documents, forms, and resources here.</p>
    </div>

    <% if(Object.keys(groupedDownloads).length > 0) { %>
        <% for (const category in groupedDownloads) { %>
            <div class="mb-5">
                <h3 class="mb-3 border-bottom pb-2"><%= category %></h3>
                <div class="list-group">
                    <% groupedDownloads[category].forEach(download => { %>
                        <a href="<%= download.file %>" target="_blank" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div dir="<%= lang === 'ur' ? 'rtl' : 'ltr' %>">
                                <i class="bi bi-file-earmark-arrow-down me-2"></i>
                                <%= download.title[lang] || download.title.en %>
                            </div>
                            <span class="badge bg-light text-dark rounded-pill">
                                Added: <%= new Date(download.createdAt).toLocaleDateString('en-GB') %>
                            </span>
                        </a>
                    <% }); %>
                </div>
            </div>
        <% } %>
    <% } else { %>
        <div class="col-12">
            <div class="alert alert-info text-center">
                <p class="mb-0">There are no files available for download at the moment.</p>
            </div>
        </div>
    <% } %>
</div>