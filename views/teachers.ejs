<div class="container my-5">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold">Our Esteemed Faculty</h1>
        <p class="lead text-muted">Meet the dedicated professionals shaping the future of our students.</p>
    </div>

    <div class="row">
        <% if(teachers.length > 0) { %>
            <% teachers.forEach(teacher => { %>
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="card h-100 text-center shadow-sm border-0">
                        <div class="card-img-top-container">
                            <img src="<%= teacher.profileImage %>" class="card-img-top" alt="<%= teacher.name %>" style="width: 100%; height: 250px; object-fit: cover;">
                        </div>
                        <div class="card-body">
                            <h5 class="card-title mb-1"><%= teacher.name %></h5>
                            <p class="card-text text-muted mb-2"><%= teacher.designation %></p>
                            <span class="badge bg-primary fw-normal"><%= teacher.subject %></span>
                        </div>
                        <% if (teacher.contact) { %>
                            <div class="card-footer bg-white border-0">
                                <small class="text-muted">Contact: <%= teacher.contact %></small>
                            </div>
                        <% } %>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="col-12">
                <div class="alert alert-info text-center">
                    <p class="mb-0">Faculty information is currently being updated. Please check back soon.</p>
                </div>
            </div>
        <% } %>
    </div>
</div>