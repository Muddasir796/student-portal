<div class="container my-5">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold">Today's Birthdays</h1>
        <p class="lead text-muted">Join us in wishing a very happy birthday to the following students!</p>
    </div>

    <div class="row justify-content-center">
        <% if(students.length > 0) { %>
            <% students.forEach(student => { %>
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card h-100 text-center shadow-sm border-0">
                        <div class="card-img-top-container">
                            <img src="<%= student.profileImage %>" class="card-img-top" alt="<%= student.name %>" style="width: 100%; height: 250px; object-fit: cover;">
                        </div>
                        <div class="card-body">
                            <h5 class="card-title mb-1"><%= student.name %></h5>
                            <p class="card-text text-muted mb-2"><%= student.class %></p>
                        </div>
                        <div class="card-footer bg-white border-0">
                            <i class="bi bi-gift-fill text-danger"></i>
                            <small class="text-muted"> Happy Birthday! </small>
                            <i class="bi bi-gift-fill text-danger"></i>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="col-12">
                <div class="alert alert-info text-center">
                    <p class="mb-0">There are no student birthdays today.</p>
                </div>
            </div>
        <% } %>
    </div>
</div>